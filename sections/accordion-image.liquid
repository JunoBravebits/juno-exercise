{{ 'accordion-image.css' | asset_url | stylesheet_tag }}

{%- style -%}

{%- endstyle -%}


<div class="accordion-image">
  <div class="accordion">
    <div class="accordion__container">
      <accordion-image>
        {%- for block in section.blocks -%}
          <div class="accordion__section">
            <div class="accordion__label js-label">
              <span>{{ block.settings.label }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="none">
                <path d="M17 1L9 9L1 1" stroke="#2D3339" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="accordion__content js-content">
              <p>{{ block.settings.content }}</p>
            </div>
          </div>
        {%- endfor -%}
      </accordion-image>
    </div>
  </div>
  <div class="image">
    <div class="accordion-image__image" style="background-image: url({{ section.settings.image | image_url }})">
      <div class="accordion-image__image-title title">{{ section.settings.title }}</div>
    </div>
  </div>
</div>    

{% schema %}
{
  "name": "Accordion Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Product Spects",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "accordionImage",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "default": "Imageing",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "content",
          "default": "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Accordion Image"
    }
  ]
}
{% endschema %}